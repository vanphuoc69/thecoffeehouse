<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:outlineAmbientShadowColor="#471975">

    <ImageView
        android:id="@+id/imghinh_332"
        android:layout_width="185dp"
        android:layout_height="183dp"
        android:layout_marginTop="15dp"
        android:outlineAmbientShadowColor="#251485"
        android:outlineSpotShadowColor="@android:color/holo_orange_dark"
        app:srcCompat="@drawable/hatdieu"/>

    <TextView
        android:id="@+id/txtten_332"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:outlineSpotShadowColor="@android:color/holo_orange_dark"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtgia_332"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#1B5D91"
        android:textSize="20dp"
        android:textStyle="italic" />
</LinearLayout>